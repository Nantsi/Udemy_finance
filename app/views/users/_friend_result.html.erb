<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
      <table class="col">
          <tbody>
      
      <% @friends.each do |friend| %>
      <% if !(friend.email == current_user.email) %>
      <tr>
        <td><strong> Name: </strong> <%= friend.first_name %> <%= " " %> <%= friend.last_name %></td>
        <td><strong> Email: </strong> <%= friend.email %></td>
       <td> <%= link_to 'View Profile', user_path(friend),
                                             class: 'btn btn-sm btn-success' %> </td>
        <% if current_user.not_friends_with?(friend.id) %>
        <td> <%= button_to 'Follow', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %></td>
          <% else %>
              <td><strong> Already following </strong></td>
          <% end %>
      </tr>
      <% end %>
      
      <% end %>
      </tbody>
      </table>
  </div>
<% end %> 