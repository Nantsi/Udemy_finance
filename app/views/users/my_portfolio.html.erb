<h1>My portfolio</h1>

<div class="search-area col"> 
    <h2>Search stocks</h2>
    <%= form_tag search_stock_path, remote: true, method: :get do %>
        <div class="form-group row" >
            <div class="col sm-4 no-right-padding">
                <%= text_field_tag :stock, params[:stock], placeholder: "Ticker symbol", autofocus: true,
                class:"form-control form-control-large" %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 1x' %>
                    <% end %>
            </div>
        </div>
    <% end %>
</div>



<% if @tracked_stocks %>
  <%= render 'stocks/list'%>
<% end %>

<%= render 'users/result' %>