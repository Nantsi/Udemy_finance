<h1>My portfolio</h1>

<div class="search-area col-10"> 
    <h2>Search stocks</h2>
    <%= form_tag search_stock_path, remote: true, method: :get do %>
        <div class="form-group row" >
            <div class="col-9 no-right-padding">
                <%= text_field_tag :stock, params[:stock], placeholder: "Ticker symbol", autofocus: true,
                class:"form-control form-control-large" %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 1x' %>
                    <% end %>
            </div>
        </div>
    <% end %>
</div>

<%= render 'users/result' %>

<% if @tracked_stocks %>
<div class="col col-10"> 
  <%= render 'stocks/list'%>
  </div>
<% end %>

